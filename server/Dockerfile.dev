# Development Dockerfile for Google Workspace Gateway Server
FROM python:3.12-slim

# Install system dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Install uv
COPY --from=ghcr.io/astral-sh/uv:latest /uv /usr/local/bin/uv

WORKDIR /app

# Install dependencies
COPY pyproject.toml uv.lock README.md ./
RUN uv sync --frozen

# Copy source (will be overwritten by volume mount in dev)
COPY gwg_server ./gwg_server

ENV PYTHONUNBUFFERED=1

EXPOSE 8001

CMD ["uv", "run", "uvicorn", "gwg_server.main:app", "--host", "0.0.0.0", "--port", "8001", "--reload"]
